name: Deploy LMS to Render & Vercel

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  # Build and Test Backend
  test-backend:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          
      - name: Install Backend Dependencies
        working-directory: ./backend
        run: npm ci
        
      - name: Check for Syntax Errors
        working-directory: ./backend
        run: node -c server.js

  # Build and Test Frontend
  test-frontend:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      
      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          
      - name: Install Frontend Dependencies
        working-directory: ./frontend
        run: npm ci
        
      - name: Build Frontend
        working-directory: ./frontend
        run: npm run build
        env:
          CI: false
          REACT_APP_API_URL: ${{ secrets.BACKEND_URL || 'http://localhost:5000' }}

  # Deploy Backend to Render
  deploy-backend:
    needs: [test-backend, test-frontend]
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    steps:
      - name: Check Render Webhook
        run: |
          if [ -z "${{ secrets.RENDER_DEPLOY_HOOK_BACKEND }}" ]; then
            echo "âš ï¸  WARNING: Render webhook not configured!"
            echo "ğŸ“– Please add RENDER_DEPLOY_HOOK_BACKEND secret to your GitHub repository"
            echo "ğŸ”— https://github.com/amanshah20/LMS/settings/secrets/actions"
            echo ""
            echo "ğŸ“š Follow Step 1 in GITHUB_ACTIONS_SETUP.md to get the webhook URL"
            exit 1
          fi
          
      - name: Deploy to Render
        run: |
          echo "ğŸš€ Deploying Backend to Render..."
          curl -X POST "${{ secrets.RENDER_DEPLOY_HOOK_BACKEND }}"
        
      - name: Deployment Status
        run: |
          echo "âœ… Backend deployment triggered!"
          echo "ğŸ”— Check status at: https://dashboard.render.com"

  # Deploy Frontend to Vercel
  deploy-frontend:
    needs: [test-backend, test-frontend]
    runs-on: ubuntu-latest
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'
    steps:
      - uses: actions/checkout@v3
      
      - name: Check Vercel Secrets
        run: |
          if [ -z "${{ secrets.VERCEL_TOKEN }}" ] || [ -z "${{ secrets.VERCEL_ORG_ID }}" ] || [ -z "${{ secrets.VERCEL_PROJECT_ID }}" ]; then
            echo "âš ï¸  WARNING: Vercel secrets not configured!"
            echo "ğŸ“– Please add the following secrets to your GitHub repository:"
            echo "   - VERCEL_TOKEN"
            echo "   - VERCEL_ORG_ID"
            echo "   - VERCEL_PROJECT_ID"
            echo ""
            echo "ğŸ“š Follow the guide in GITHUB_ACTIONS_SETUP.md"
            echo "ğŸ”— https://github.com/amanshah20/LMS/settings/secrets/actions"
            exit 1
          fi
      
      - name: Deploy to Vercel
        uses: amondnet/vercel-action@v20
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          working-directory: ./frontend
          vercel-args: '--prod'

  # Notify Deployment Status
  notify:
    needs: [deploy-backend, deploy-frontend]
    runs-on: ubuntu-latest
    if: always()
    steps:
      - name: Deployment Summary
        run: |
          echo "ğŸ“Š Deployment Summary"
          echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
          echo "Backend: ${{ needs.deploy-backend.result }}"
          echo "Frontend: ${{ needs.deploy-frontend.result }}"
